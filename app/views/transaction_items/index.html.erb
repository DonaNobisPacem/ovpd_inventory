<p id="notice"><%= notice %></p>

<h1>Listing Transaction Items</h1>

<table>
  <thead>
    <tr>
      <th>Transaction</th>
      <th>Quantity</th>
      <th>Product</th>
      <th>Transaction type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_items.each do |transaction_item| %>
      <tr>
        <td><%= transaction_item.transaction %></td>
        <td><%= transaction_item.quantity %></td>
        <td><%= transaction_item.product_id %></td>
        <td><%= transaction_item.transaction_type %></td>
        <td><%= link_to 'Show', transaction_item %></td>
        <td><%= link_to 'Edit', edit_transaction_item_path(transaction_item) %></td>
        <td><%= link_to 'Destroy', transaction_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

