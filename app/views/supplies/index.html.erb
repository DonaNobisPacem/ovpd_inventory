<p id="notice"><%= notice %></p>

<h1>Listing Supplies</h1>
<%= link_to '<i class="fa fa-plus"></i> New Supply'.html_safe, new_supply_path, :class => "pull-right" %>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Group identifier</th>
      <th>Group quantity</th>
      <th>Identifier</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.name %></td>
        <td><%= supply.quantity %></td>
        <td><%= supply.group_identifier %></td>
        <td><%= supply.group_quantity %></td>
        <td><%= supply.identifier %></td>
        <td><%= supply.cost %></td>
        <td><%= link_to 'Show', supply %></td>
        <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
